# Nginx configuration for Calk.KG
# Скопируйте в /etc/nginx/sites-available/calk.kg

server {
    listen 80;
    listen [::]:80;
    server_name calk.kg www.calk.kg;
    
    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name calk.kg www.calk.kg;
    
    # SSL certificates (adjust paths)
    # ssl_certificate /etc/letsencrypt/live/calk.kg/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/calk.kg/privkey.pem;
    
    root /var/www/calk.kg/dist;
    index index.html;
    
    # Enable gzip
    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types text/plain text/css text/xml application/json application/javascript application/rss+xml application/atom+xml image/svg+xml;
    
    # Serve pre-compressed files (Brotli preferred, then gzip)
    location ~* \.(js|css|html|svg)$ {
        # Try to serve pre-compressed files
        gzip_static on;
        
        # Brotli static (if ngx_brotli module installed)
        # brotli_static on;
        
        # Add cache headers
        add_header Cache-Control "public, max-age=31536000, immutable";
        add_header Vary "Accept-Encoding";
        
        try_files $uri $uri/ =404;
    }
    
    # Images - long cache
    location ~* \.(png|jpg|jpeg|gif|ico|webp)$ {
        expires 1y;
        add_header Cache-Control "public, max-age=31536000, immutable";
        try_files $uri =404;
    }
    
    # Fonts
    location ~* \.(woff|woff2|ttf|otf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, max-age=31536000, immutable";
        add_header Access-Control-Allow-Origin "*";
        try_files $uri =404;
    }
    
    # Assets with hash in filename - immutable cache
    location /assets/ {
        expires 1y;
        add_header Cache-Control "public, max-age=31536000, immutable";
        
        # Serve pre-compressed files
        gzip_static on;
        
        try_files $uri =404;
    }
    
    # Static pages with pre-rendered HTML
    location / {
        # Try static file first, then folder/index.html, then SPA fallback
        try_files $uri $uri/ $uri/index.html /index.html;
        
        # Short cache for HTML (allows updates)
        add_header Cache-Control "public, max-age=3600";
    }
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    
    # Android App Links - Digital Asset Links
    # Redirect /.well-known/ to /well-known/ (without dot)
    location /.well-known/ {
        alias /var/www/calk.kg/dist/well-known/;
        add_header Content-Type application/json;
        add_header Access-Control-Allow-Origin "*";
    }
    
    # Deny access to hidden files (except .well-known)
    location ~ /\.(?!well-known) {
        deny all;
    }
}


